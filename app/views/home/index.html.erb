<h1>Proyecto Final</h1>
<h1>Lista de los proyecto</h1>


<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Monto total</th>
    <th>Monto actual</th>
    <th>Fecha inicio</th>
    <th>Fecha limite</th>
    <th>Fecha cierre</th>
    <th></th>
  </tr>

<% @proyectos.each do |proyecto| %>
  <tr>
    <td><%= proyecto.nombre %></td>
    <td><%= proyecto.descripcion %></td>
    <td><%= proyecto.monto_total %></td>
    <td><%= proyecto.monto_actual %></td>
    <td><%= proyecto.fecha_inicio.to_date %></td>
    <td><%= proyecto.fecha_limite %></td>
    <% if proyecto.fecha_cierre %>
    	<td><%= proyecto.fecha_cierre.to_date %></td>
    <% else	%>
    	<td><%= proyecto.fecha_cierre %></td>
    <% end %>
 	<% if current_user %>
 		<% if current_user.tipo_usuario == 0 %>
    		<td> <%= link_to 'Donar', {:controller => "userprojects", :action => "new", :proyecto_id => proyecto.id }%></td>
    	<% end %>	

    <% end %>	
  </tr>
<% end %>
</table>

<br />


