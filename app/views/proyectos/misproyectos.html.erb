<h1>mis proyectos</h1>

<table class="table table-stripped">
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Monto total</th>
    <th>Monto actual</th>
    <th>Fecha inicio</th>
    <th>Fecha limite</th>
    <th>Fecha cierre</th>
    <th>Status</th>
    
    <th></th>
    <th></th>
   
  </tr>

<% @proyectos.each do |proyecto| %>
  <tr>
    <td><%= proyecto.nombre %></td>
    <td><%= proyecto.descripcion %></td>
    <td><%= proyecto.monto_total %></td>
    <td><%= proyecto.monto_actual %></td>
    <td><%= proyecto.fecha_inicio.to_date %></td>
    <td><%= proyecto.fecha_limite %></td>
    <% if proyecto.fecha_cierre %>
        <td><%= proyecto.fecha_cierre.to_date %></td>
    <% else %>    
        <td><%= proyecto.fecha_cierre %> </td>
    <% end %>   
   <% if proyecto.status == 1 %>
     <td><%= p "Activo" %> </td>
   <% else %>
      <td><%= p "Inactivo" %></td>
   <% end %> 
   
   
    <td><%= link_to 'Show', proyecto %></td>
    <td><%= link_to 'Edit', edit_proyecto_path(proyecto) %></td>
  
  </tr>
<% end %>
</table>

